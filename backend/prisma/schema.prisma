generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("PATIENT") // PATIENT, ADMIN
  createdAt DateTime @default(now())
  appointments Appointment[]
  reviews      Review[]
  symptomChecks SymptomCheck[]
}

model Doctor {
  id              Int            @id @default(autoincrement())
  name            String
  specialization  String
  bio             String?
  fee             Float
  image           String?
  workingHours    WorkingHours[]
  appointments    Appointment[]
  reviews         Review[]
}

model WorkingHours {
  id        Int    @id @default(autoincrement())
  doctorId  Int
  dayOfWeek Int    // 0=Sunday, 1=Monday, etc.
  startTime String // "09:00"
  endTime   String // "17:00"
  doctor    Doctor @relation(fields: [doctorId], references: [id])

  @@unique([doctorId, dayOfWeek])
}

model Appointment {
  id          Int      @id @default(autoincrement())
  userId      Int
  doctorId    Int
  date        DateTime // YYYY-MM-DD 00:00:00
  startTime   String   // "10:00"
  status      String   @default("CONFIRMED") // CONFIRMED, CANCELLED
  type        String   @default("IN_PERSON") // IN_PERSON, VIDEO
  meetingLink String?  // For video calls
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  doctor Doctor @relation(fields: [doctorId], references: [id])

  @@unique([doctorId, date, startTime])
}

model Review {
  id        Int      @id @default(autoincrement())
  doctorId  Int
  userId    Int
  rating    Int      // 1-5
  comment   String?
  createdAt DateTime @default(now())

  doctor Doctor @relation(fields: [doctorId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model SymptomCheck {
  id            Int      @id @default(autoincrement())
  userId        Int?
  symptomsText  String
  responseJson  String   // Stored as JSON string
  createdAt     DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}
