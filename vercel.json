{
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/dist",
    "installCommand": "npm install --prefix frontend && npm install --prefix backend",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index"
        }
    ],
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}